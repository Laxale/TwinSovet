<Window x:Class="TwinSovet.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"

        xmlns:wpf="clr-namespace:StickyWindows.WPF;assembly=StickyWindows.WPF"

        xmlns:views="clr-namespace:TwinSovet.Views"
        xmlns:praps="clr-namespace:TwinSovet.Properties"
        xmlns:localization="clr-namespace:TwinSovet.Localization;assembly=TwinSovet.Localization"

        mc:Ignorable="d"
        Height="450" Width="800"
        Icon="Resources/house.ico"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True"
        MinHeight="450" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Title="{x:Static localization:Resources.AppName}">

    <i:Interaction.Behaviors>
        <wpf:StickyWindowBehavior/>
    </i:Interaction.Behaviors>

    <views:MainView/>
</Window>